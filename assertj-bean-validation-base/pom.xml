    <profile>
      <id>javax</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <version.jakarta.el>3.0.3</version.jakarta.el>
        <version.org.hibernate.validator>6.2.0.Final</version.org.hibernate.validator>
      </properties>
